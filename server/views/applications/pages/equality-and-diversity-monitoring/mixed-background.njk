{% from "../../../components/formFields/form-page-input/macro.njk" import formPageInput %}

{% extends "../layout.njk" %}
{% block questions %}
  {% set pageTitleHTML %}
    <span class="govuk-caption-l">{{ page.title }}</span>
    {{ page.questions.mixedBackground.question }}
  {% endset%}

  {% set optionalMixedBackground %}
    {{
      formPageInput(
        {
          label: { text: page.questions.optionalMixedBackground.question},
          classes: "govuk-input--width-20",
          fieldName: "optionalMixedBackground"
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {{
    formPageRadios(
      {
        fieldName: "mixedBackground",
        fieldset: {
          legend: {
            html: pageTitleHTML,
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: page.items(optionalMixedBackground)
      },
      fetchContext()
    )
  }}
{% endblock %}
