{% extends "../layout.njk" %}

{% block questions %}


      {{ govukPanel({
        titleText: page.title,
        classes: "govuk-!-margin-bottom-6 govuk-panel--fail"
      }) }}

      <p class="govuk-body-l">You can still continue with the application and come back to this later.</p>
      <p class="govuk-body-l">You'll need to enter if the applicant has given their consent to submit the application.</p>

{% endblock %}

{% block button %}
  <div class="govuk-button-group">
  {{ govukButton({
      text: "Save and continue"
    }) }}

  {{ govukButton({
    text: "Change your answer about consent",
    classes: "govuk-button--secondary",
    href: paths.applications.pages.show({ id: applicationId, task: 'confirm-consent', page: 'confirm-consent' })
  }) }}

  <a href="{{ paths.applications.index({}) }}" class="govuk-link">Back to application dashboard</a>
  </div>
{% endblock %}