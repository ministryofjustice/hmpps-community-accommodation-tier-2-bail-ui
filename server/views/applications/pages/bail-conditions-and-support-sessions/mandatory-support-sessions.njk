{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l govuk-!-margin-bottom-4">{{ page.title }}</h1>

  <p>{{page.questions.mandatorySupportSessions.hint}}</p>

  {% set mandatorySupportSessionsDetail %}
  {{
      formPageTextArea(
        {
          label: { text: page.questions.mandatorySupportSessionsDetail.question, classes: "govuk-label--m"},
          fieldName: "mandatorySupportSessionsDetail"
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {{
    formPageRadios(
      {
        fieldName: "mandatorySupportSessions",
        items: page.items(mandatorySupportSessionsDetail)
      },
      fetchContext()
    )
  }}
{% endblock %}