{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l govuk-!-margin-bottom-4">{{ page.title }}</h1>

  <p>{{page.questions.nonStandardBailConditions.hint}}</p>

  {% set nonStandardBailConditionsDetail %}
  {{
      formPageTextArea(
        {
          label: { text: page.questions.nonStandardBailConditionsDetail.question, classes: "govuk-label--m"},
          fieldName: "nonStandardBailConditionsDetail"
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {{
    formPageRadios(
      {
        fieldName: "nonStandardBailConditions",
        items: page.items(nonStandardBailConditionsDetail)
      },
      fetchContext()
    )
  }}
{% endblock %}