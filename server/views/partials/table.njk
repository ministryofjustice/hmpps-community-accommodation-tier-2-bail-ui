{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro applicationsTable(title, columnHeadings, rows) %}
  {% if rows %}
    {{
        govukTable({
          caption: title,
          captionClasses: "govuk-table__caption--m",
          firstCellIsHeader: true,
          head: columnHeadings,
          rows: rows
        })
      }}
  {% endif %}
{% endmacro %}
